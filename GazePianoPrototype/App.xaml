<Application
    x:Class="GazePianoPrototype.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GazePianoPrototype">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="NoteButton">
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="FontSize" Value="60"/>

            </Style>

            <Style TargetType="Button" x:Key="ModeButton">
                <Setter Property="BorderBrush" Value="Blue"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="FontSize" Value="60"/>
            </Style>

            <Style TargetType="Button" x:Key="SelectedModeButton" BasedOn="{StaticResource ModeButton}">
                <Setter Property="Background" Value="#7F0093F0"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
